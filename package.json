{
  "name": "hmpps-accredited-programmes-ui",
  "version": "0.0.1",
  "description": "HMPPS Accredited Programmes UI",
  "repository": "git@github.com:ministryofjustice/hmpps-accredited-programmes-ui.git",
  "license": "MIT",
  "scripts": {
    "api-stubs:create": "npx ts-node --transpile-only ./wiremock/scripts/stubApis.ts",
    "api-stubs:reset": "npx ts-node --transpile-only ./wiremock/scripts/resetStubs.ts",
    "build": "npm run compile-sass && tsc && npm run copy-views",
    "clean": "rm -rf dist build node_modules stylesheets",
    "compile-sass": "sass --quiet-deps --no-source-map --load-path=node_modules/govuk-frontend --load-path=node_modules/@ministryofjustice/frontend --load-path=. assets/scss/application.scss:./assets/stylesheets/application.css assets/scss/application-ie8.scss:./assets/stylesheets/application-ie8.css --style compressed",
    "copy-views": "cp -R server/views dist/server/",
    "int-test-ui": "cypress open",
    "int-test": "cypress run",
    "lint:ci": "npm run lint:css && npm run lint:js",
    "lint:css": "npx stylelint \"assets/scss/components/*.scss\"",
    "lint:js": "eslint . --cache --max-warnings 0",
    "lint:njk": "djlint .",
    "lint": "npm run lint:css && npm run lint:js && npm run lint:njk",
    "record-build-info": "node ./bin/record-build-info",
    "scripts:typecheck": "cd script && tsc",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "start-integration-env:dev": "npm run build && concurrently -k -p \"[{name}]\" -n \"Views,TypeScript,Node,Sass\" -c \"yellow.bold,cyan.bold,green.bold,blue.bold\" \"npm run watch-views\" \"npm run watch-ts\" \"npm run watch-node-feature\" \"npm run watch-sass\"",
    "start-integration-env": "export $(cat integration.env) && node $NODE_DEBUG_OPTION dist/server.js | bunyan -o short",
    "start-test-wiremock": "docker-compose -f docker-compose-test.yml up -d",
    "start:dev": "npm run build && concurrently -k -p \"[{name}]\" -n \"Views,TypeScript,Node,Sass\" -c \"yellow.bold,cyan.bold,green.bold,blue.bold\" \"npm run watch-views\" \"npm run watch-ts\" \"npm run watch-node\" \"npm run watch-sass\"",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "test:ci": "jest --runInBand",
    "test:integration:ui": "npm run start-test-wiremock && start-server-and-test start-integration-env:dev http://localhost:3007/ping int-test-ui",
    "test:integration": "npm run start-test-wiremock && start-server-and-test start-integration-env http://localhost:3007/ping int-test",
    "test": "jest",
    "typecheck": "tsc && tsc -p integration_tests",
    "watch-node-feature": "export $(cat integration.env) && nodemon --watch dist/ $NODE_DEBUG_OPTION dist/server.js | bunyan -o short",
    "watch-node": "DEBUG=gov-starter-server* nodemon -r dotenv/config --watch dist/ dist/server.js | bunyan -o short",
    "watch-sass": "npm run compile-sass -- --watch",
    "watch-ts": "tsc -w",
    "watch-views": "nodemon --watch server/views -e html,njk -x npm run copy-views"
  },
  "engines": {
    "node": "^v18.16.0",
    "npm": "^9"
  },
  "dependencies": {
    "@faker-js/faker": "^8.0.0",
    "@ministryofjustice/frontend": "^1.6.6",
    "@sentry/node": "^7.54.0",
    "agentkeepalive": "^4.3.0",
    "applicationinsights": "^2.5.1",
    "body-parser": "^1.20.2",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "connect-redis": "^7.0.0",
    "csurf": "^1.11.0",
    "express": "^4.18.2",
    "express-prom-bundle": "^6.6.0",
    "express-session": "^1.17.3",
    "fishery": "^2.2.2",
    "govuk-frontend": "^4.5.0",
    "helmet": "^7.0.0",
    "http-errors": "^2.0.0",
    "jquery": "^3.6.4",
    "jwt-decode": "^3.1.2",
    "nocache": "^4.0.0",
    "nunjucks": "^3.2.4",
    "passport": "^0.6.0",
    "passport-oauth2": "^1.7.0",
    "prom-client": "^14.2.0",
    "redis": "^4.6.5",
    "static-path": "^0.0.4",
    "superagent": "^8.0.9",
    "url-value-parser": "^2.2.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@golevelup/ts-jest": "^0.3.5",
    "@pact-foundation/pact": "^12.0.0",
    "@types/bunyan": "^1.8.8",
    "@types/bunyan-format": "^0.2.5",
    "@types/compression": "^1.7.2",
    "@types/connect-flash": "0.0.37",
    "@types/cookie-session": "^2.0.44",
    "@types/csurf": "^1.11.2",
    "@types/express-session": "^1.17.7",
    "@types/http-errors": "^2.0.1",
    "@types/jest": "^29.5.0",
    "@types/jest-when": "^3.5.2",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/lodash": "^4.14.194",
    "@types/node": "^18.16.3",
    "@types/nunjucks": "^3.2.2",
    "@types/passport": "^1.0.12",
    "@types/passport-oauth2": "^1.4.12",
    "@types/superagent": "^4.1.16",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "audit-ci": "^6.6.1",
    "axe-core": "^4.7.2",
    "concurrently": "^8.0.1",
    "cookie-session": "^2.0.0",
    "cypress": "^12.9.0",
    "cypress-axe": "^1.4.0",
    "cypress-mochawesome-reporter": "^3.5.1",
    "cypress-multi-reporters": "^1.6.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.38.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-cypress": "^2.13.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-sort-exports": "^0.8.0",
    "jest": "^29.5.0",
    "jest-html-reporter": "^3.7.1",
    "jest-junit": "^16.0.0",
    "jest-pact": "^0.11.0",
    "jest-when": "^3.5.2",
    "jsonwebtoken": "^9.0.0",
    "mocha-junit-reporter": "^2.2.0",
    "nock": "^13.3.0",
    "nodemon": "^3.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-jinja-template": "^0.5.0",
    "sass": "^1.61.0",
    "start-server-and-test": "^2.0.0",
    "stylelint": "^15.8.0",
    "stylelint-config-clean-order": "^5.0.1",
    "stylelint-config-standard-scss": "^10.0.0",
    "stylelint-selector-bem-pattern": "^3.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  },
  "optionalDependencies": {
    "djlint": "^1.27.0"
  },
  "overrides": {
    "prettier-plugin-jinja-template": {
      "prettier": "^3.0.0"
    }
  }
}
