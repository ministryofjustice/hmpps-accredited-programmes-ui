{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "noEmit": false,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "typeRoots": ["./server/@types", "./node_modules/@types"],
    "paths": {
      "@accredited-programmes/models": ["./server/@types/models/index.d.ts"],
      "@accredited-programmes/ui": ["./server/@types/ui/index.d.ts"],
      "@govuk-frontend": ["./server/@types/govukFrontend/index.d.ts"],
      "@prison-register-api": ["./server/@types/prisonRegisterApi/index.d.ts"],
      "@prisoner-offender-search": ["./server/@types/prisonerOffenderSearch/index.d.ts"]
    }
  },
  "exclude": [
    "assets/**/*.js",
    "cypress.config.ts",
    "cypress-refer-disabled.config.ts",
    "dist",
    "integration_tests",
    "node_modules",
    "script"
  ],
  "include": ["**/*.js", "**/*.ts"]
}
