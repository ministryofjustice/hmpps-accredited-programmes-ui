{% extends "../../partials/changeStatusLayout.njk" %}

{% block statusContent %}
  <p>{{ pageDescription }}</p>
{% endblock statusContent %}

{% block statusAction %}
  <form method="post">
    <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>

    {{ govukRadios({
      name: "categoryCode",
      fieldset: {
        legend: {
          text: radioLegend,
          classes: "govuk-fieldset__legend--m"
        }
      },
      items: radioItems,
      errorMessage: errors.messages.categoryCode,
      attributes: {
        "data-testid": "category-options"
      }
    }) }}

    <div class="govuk-button-group">
      {{ govukButton({
        text: "Continue"
      }) }}

      <a class="govuk-link" href={{ backLinkHref }}>Cancel</a>
    </div>
  </form>
{% endblock statusAction %}
