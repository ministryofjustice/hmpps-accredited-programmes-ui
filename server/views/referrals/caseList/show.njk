{% from "govuk/components/table/macro.njk" import govukTable %}

{% extends "../../partials/layout.njk" %}

{% block content %}
  <h1 class="govuk-heading-l">{{ pageHeading }}</h1>

  {{ govukTable({
    attributes: {
      'data-module': 'moj-sortable-table'
    },
    head: [
      {
        text: "Name / Prison number",
        attributes: {
          "aria-sort": "ascending"
        }
      },
      {
        text: "Date referred",
        attributes: {
          "aria-sort": "none"
        }
      },
      {
        text: "Programme name",
        attributes: {
          "aria-sort": "none"
        }
      },
      {
        text: "Referral status",
        attributes: {
          "aria-sort": "none"
        }
      }
    ],
    rows: tableRows
  }) }}
{% endblock content %}
