{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% from "../partials/audienceTags.njk" import audienceTags %}

{% extends "../partials/layout.njk" %}

{% block backLink %}
  {{ govukBackLink({
    text: "Back",
    href: findPaths.offerings.show({ courseOfferingId: courseOffering.id })
  }) }}
{% endblock backLink %}

{% block content %}
  <h1 class="govuk-heading-l">{{ pageHeading }}</h1>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% include "../partials/organisationAndCourse.njk" %}

      {{ audienceTags(course.audienceTags) }}

      <h2 class="govuk-heading-m">What you'll need to do</h2>

      <p class="govuk-body">When completing the referral:</p>

      <ul class="govuk-list govuk-list--bullet">
        <li>review this person's information and confirm that it's accurate</li>
        <li>review or add this person's history of Accredited Programmes</li>
        <li>provide any supporting information for this referral</li>
      </ul>

      {{ govukButton({
          text: "Start now",
          href: referPaths.new({ courseOfferingId: courseOffering.id })
      }) }}
    </div>
  </div>
{% endblock content %}
