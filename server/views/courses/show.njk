{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% from "../partials/audienceTags.njk" import audienceTags %}

{% extends "../partials/layout.njk" %}

{% block backLink %}
  {{ govukBackLink({
    text: "Back",
    href: findPaths.index({})
  }) }}
{% endblock backLink %}

{% block content %}
  <h1 class="govuk-heading-l">{{ pageHeading }}</h1>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ audienceTags(course.audienceTags) }}

      <h2 class="govuk-heading-m">Programme criteria</h2>

      {{ govukSummaryList({
        classes: 'govuk-summary-list--no-border',
        rows: course.prerequisiteSummaryListRows
      }) }}

      <h2 class="govuk-heading-m">Programme description</h2>

      <p class="govuk-body">{{ course.description }}</p>

      <h2 class="govuk-heading-m">Locations</h2>

      {% include "./_locationsTable.njk" %}
    </div>
  </div>
{% endblock content %}
