{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/tag/macro.njk" import govukTag %}

{% extends "../partials/layout.njk" %}

{% set pageTitle = applicationName + " - " + course.name %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}
  <h1>{{ pageHeading }}</h1>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <p class="govuk-body">
        {{ govukTag({text: "SEXUAL OFFENCE", classes: "govuk-tag--red"}) }}
        {{ govukTag({text: "EXTREMISM", classes: "govuk-tag--blue"}) }}
        {{ govukTag({text: "INTIMATE PARTNER VIOLENCE", classes: "govuk-tag--green"}) }}
        {{ govukTag({text: "GENERAL VIOLENCE", classes: "govuk-tag--purple"}) }}
      </p>

      <h2>Programme criteria</h2>

      {{ govukSummaryList({
        classes: 'govuk-summary-list--no-border',
        rows: course.prerequisiteSummaryListRows
      }) }}

      <h2>Programme description</h2>

      <p class="govuk-body">{{ course.description }}</p>

      <h2>Locations</h2>

      {% include "./_locationsTable.njk" %}
    </div>
  </div>
{% endblock content %}
