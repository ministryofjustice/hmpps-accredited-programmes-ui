{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% extends "../partials/layout.njk" %}

{% block cookieBanner %}{% endblock cookieBanner %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-l">{{ pageHeading }}</h1>
      <p class="govuk-body">
        Cookies are small files saved on your phone, tablet or computer when you visit a website.
      </p>
      <p class="govuk-body">
        We use cookies to make Refer and monitor an intervention work and collect information about how you use our service.
      </p>

      <h2 class="govuk-heading-m">Essential cookies</h2>
      <p class="govuk-body">
        Essential cookies keep your information secure while you use Refer and monitor an intervention. We do not need to ask permission to use them.
      </p>
      {{ govukTable({
          firstCellIsHeader: true,
          head: [
              {
                  text: "Name",
                  classes: 'app-custom-class'
              },
              {
                  text: "Purpose",
                  classes: 'app-custom-class'
              },
              {
                  text: "Expires",
                  classes: 'app-custom-class'
              }
          ],
          rows: [
              [
                  { text: "connect.sid" },
                  { text: "Keeps you logged into the service" },
                  { text: "1 hour" }
              ],
              [
                  { text: "acceptAnalyticsCookies" },
                  { text: "Saves your analytics cookie consent setting" },
                  { text: "1 year" }
              ]
          ]
      }) }}

      <h2 class="govuk-heading-m">Analytics cookies (optional)</h2>
      <p class="govuk-body">
          With your permission, we use Microsoft's Application Insights to collect data about how you use Refer and monitor an intervention. This information helps us to improve our service.
        </p>
      <p class="govuk-body">Microsoft is not allowed to use or share our analytics data with anyone.</p>
      <p class="govuk-body">Application Insights stores anonymised information about:</p>
      <ul class="govuk-list govuk-list--bullet">
        <li>the pages you visit on Refer and monitor an intervention and how long you spend on them</li>
        <li>the device and browser you are using to view the service</li>
        <li>any errors you see while using the service</li>
      </ul>

      {{ govukTable({
          firstCellIsHeader: true,
          head: [
              {
                  text: "Name",
                  classes: 'app-custom-class'
              },
              {
                  text: "Purpose",
                  classes: 'app-custom-class'
              },
              {
                  text: "Expires",
                  classes: 'app-custom-class'
              }
          ],
          rows: [
              [
                  { text: "ai_user" },
                  { text: "Checks if you've visited Refer and monitor an intervention before. This helps us count how many people use the service." },
                  { text: "1 year" }
              ],
              [
                  { text: "ai_session" },
                  { text: "Used to store data across multiple pages to track metrics like how long users are spending on each page and which pages they're visiting." },
                  { text: "3 days" }
              ]
          ]
        }) }}

      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h2 class="govuk-heading-l">Change your cookie settings</h2>
          <form action="/cookie-preferences" method="post" novalidate>
            <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>

            {{ govukRadios({
                idPrefix: "analytics-cookies",
                name: "acceptAnalyticsCookies",
                fieldset: {
                    legend: {
                        text: "Do you want to accept analytics cookies?",
                        classes: "govuk-fieldset__legend--s"
                    }
                },
                items: [
                    {
                        value: "true",
                        text: "Yes",
                        checked: acceptAnalyticsCookies === 'true'
                    },
                    {
                        value: "false",
                        text: "No",
                        checked: acceptAnalyticsCookies === 'false'
                    }
                ]
            }) }}

            {{ govukButton({
                text: "Save cookie settings",
                type: "submit"
            }) }}
          </form>
        </div>
      </div>
    </div>
  </div>
{% endblock content %}
